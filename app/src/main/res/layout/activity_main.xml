<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teal_200"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/appleIcon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/bananaIcon"
        app:layout_constraintEnd_toStartOf="@+id/bananaIcon"
        app:srcCompat="@drawable/apple_icon" />

    <ImageView
        android:id="@+id/bananaIcon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/banana_icon" />

    <ImageView
        android:id="@+id/pearIcon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/bananaIcon"
        app:layout_constraintStart_toEndOf="@+id/bananaIcon"
        app:layout_constraintTop_toTopOf="@+id/bananaIcon"
        app:srcCompat="@drawable/pear_icon" />


    <TextView
        android:id="@+id/fruitsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Fruits"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:fontFamily="@font/archivo_black"
        app:layout_constraintEnd_toEndOf="@+id/pearIcon"
        app:layout_constraintStart_toStartOf="@+id/appleIcon"
        app:layout_constraintTop_toBottomOf="@+id/bananaIcon" />

</androidx.constraintlayout.widget.ConstraintLayout>